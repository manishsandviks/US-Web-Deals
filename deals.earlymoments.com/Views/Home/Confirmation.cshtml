<h5 class="confId marginTop30">Confirmation #: @ViewBag.order_id</h5>
<div class="table-responsive noBorder confDtl">
    <table class="table black">
        <tr>
            <td>BILL TO</td>
            <!-- <td>LISA MOORE<br>37 FARM ST<br>DANBURY, CT 06811</td>-->
            <td>@Html.Raw(ViewBag.BillingAddress)</td>
            <td>SHIP TO</td>
            <td>@Html.Raw(ViewBag.ShippingAddress)</td>
        </tr>
        <tr>
            <td>CARD</td>
            <!--<td>XXXX-XXXX-XXXX-1064<br>Exp: 04-2020</td>-->
