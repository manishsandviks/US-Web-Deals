            <td>DATE</td>
            <td>@string.Format("{0:MM/dd/yyyy}", System.DateTime.Now.Date)</td>
        </tr>
    </table>
</div>
<div class="clearfix"></div>

<div class="table-responsive noBorder orderDetails">
    @Html.Raw(ViewBag.Cart)
</div>
<div class="clearfix"></div>
<p>*Plus sales tax where applicable.</p>

<script>
    $(document).ready(function () {
        var proj = '@ViewBag.Project';
        // alert(proj);
        if (proj != null && proj != "" && proj == "BRU") {
            $("#headerImage").attr("src", "/Images/Seuss/confirm_header.gif");
            $("#footerSeuss").show();
        }
        if (proj != null && proj != "" && proj == "DBU") {
            $("#headerImage").attr("src", "/Images/disney/confirm_header.jpg");
            $("#footerDisney").show();
        }
        if (proj != null && proj != "" && proj == "ELU") {
            $("#headerImage").attr("src", "/Images/elmo/confirm_header.jpg");
            $("#footerElmo").show();
        }
        if (proj != null && proj != "" && proj == "BEU") {
            $("#headerImage").attr("src", "/Images/bye/confirm_header.gif");
            $("#footerEinstien").show();
        }
    });

</script>



