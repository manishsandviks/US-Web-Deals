<script>
    var choicebooks = "";
    var booklist;
    $(document).ready(function () {
        //$(".choiceImages").each(function () {
        //    var id = this.id;
        //    console.log(id);
        //    $(this).hide();
        //});

        if ('@ViewBag.ChoiceBook' != null) {
            choicebooks = '@ViewBag.ChoiceBook';
            //alert(choicebooks);
            booklist = choicebooks.split(',');
        }

        $(".choiceImages").each(function () {
            console.log(booklist);
            var id = this.id;
            for (var i = 0; i < booklist.length; i++) {
                if (booklist[i] == id.toString().replace('div_', ''))
                    $(this).show();
            }
        });

        var err = '';
        if ('@ViewBag.ErrorMsg' != null) {
            err = '@Html.Raw(ViewBag.ErrorMsg)';
            //console.log(err);
            if (err.length > 0) {
                $("#spnErrorMessage").html(err.toString());
                $("#dialog-message").modal("toggle");
            }
        }

        if ('@ViewBag.IsBonusSelected' != null) {
            var isBonusSelected = '@ViewBag.IsBonusSelected';
            // alert(isBonusSelected);
            if (isBonusSelected == true || isBonusSelected == 'true' || isBonusSelected == 'True') {
                $("#spnSavedPrice").text('42.96');
            } else {
                $("#spnSavedPrice").text('31.99');
            }
        }
    })
</script>

