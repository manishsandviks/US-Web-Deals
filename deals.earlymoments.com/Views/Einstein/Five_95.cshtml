@model deals.earlymoments.com.Models.ShippingModels.ShippingAddress
@{
    //ViewBag.Title = "Four_for_1";
    Layout = null;
    // "~/Views/Shared/_LayoutMain.cshtml";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Baby Einstein Discovery Kit</title>
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/themes/bye/common.css" rel="stylesheet" />
    <link href="/Content/font-awesome.css" rel="stylesheet" />
    <link href="/Content/ArialRoundedMTBoldBold.css" rel="stylesheet" />
    <link href="/Content/themes/bye/Five_95/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="/script/jquery.1.11.3.min.js"></script>
    <script src="/script/bootstrap.min.js"></script>

    <script src="/script/jquery-ui.js"></script>
    <script src="/script/Validation.js"></script>
    <!--  <script src="/script/bye/Five_95/main.js"></script> -->

</head>

<body>
   @using (Html.BeginForm())
    {
        <div class="masterContainer">
            <div class="bodyContainer shadowLR roundedBorderBottom">
                <header>
                    <img src="/images/bye/Five_95/header.jpg" width="960" height="94" alt="">
                </header>

                <div class="clear"></div>

                <div class="leftCol fl">
                    <p class="imgLeft1"><img src="/images/bye/Five_95/left_01.png" width="571" height="482" alt=""></p>
                    <h1>Introduce your baby to the world</h1>
                    <h1>in a bright , interactive way!</h1>
                    <ul>
                        <li>Get 3 board books and 1 plush book in your first kit.</li>
                        <li>Explore pages packed with playful pictures.</li>
                        <li>Make reading time more fun with the Discovery Card Set.</li>
                        <li>Get great activity ideas with Parent Pages.</li>
                        <li>Risk free. Cancel at any time.</li>
                        <li>FREE shipping!</li>
                        <li>100% Guarantee!</li>
                    </ul>
                    <p class="easy123"><img src="/images/bye/Five_95/easy123.png" width="615" height="224" alt=""></p>
                </div>

                <div class="rightCol fl">
                    <div style="position:relative; margin-left:-28px; margin-top:-82px;">
                        <p><img src="/images/bye/Five_95/formTop.png" width="408" height="161" alt=""></p>
                        <p class="step1"><img src="/images/bye/Five_95/step1.png" width="408" height="44" alt=""></p>
                        <div class="formContainer">
                            <div class="formBody">
                                <div class="smallMarginBottom20">                                    
                                    @Html.Partial("_ShippingPartialPage", Model)
                                </div>
                            </div>
                        </div>
                        <p><img src="/images/bye/Five_95/step2.png" width="408" height="52" alt=""></p>
                        <div class="formContainer">
                            <div class="formBody">
                                <div class="row">
                                    <div class="col-xs-6 text-center">
                                        <img src="/images/bye/Five_95/bb.png" alt="bb" width="174" height="198">
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(model => model.isBonusSelected, true, new { @id = "radyes", @Checked = true })
                                                <strong><span>*</span> YES! Please send <em>Baby Einstein</em> First Words Jumbo Board Book for $7.48 — that's 50% off!</strong>
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label>
                                                @Html.RadioButtonFor(model => model.isBonusSelected, false, new { @id = "radno" })
                                                No, thank you
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row marginBot6">
                                    <div class="col-xs-12 text-center">
                                        <img src="/images/bye/Five_95/rushButton.png" alt="" width="287" height="86" id="btnSubmit" style="cursor:pointer" >
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p><img src="/images/bye/Five_95/form_bottom.png" width="408" height="27" alt=""></p>
                    </div>
                </div>
            </div>
            <footer>
                &copy;@System.DateTime.Now.Year The Baby Einstein Company, LLC. All rights reserved. Baby Einstein is a trademark of The Baby<br> Einstein Company, LLC. EINSTEIN is a trademark of The Hebrew University of Jerusalem.<br>
                Early Moments, 934 Plaza Dr., Montoursville, PA. 17754-2400 Copyright &copy;@System.DateTime.Now.Year
            </footer>
        </div>
    }

    <script>
        $(document).ready(function () {
            var err = '';

            if ('@ViewBag.ErrorMsg' != null) {
                err = '@Html.Raw(ViewBag.ErrorMsg)';
                console.log(err);
                if (err.length > 0) {
                    $("#spnErrorMessage").html(err.toString());
                    $("#dialog-message").modal("toggle");
                }
            }

        })
    </script>
    <!--child Gender modal-->
    <div class="modal fade" id="childGndr" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close red" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p><b>Why do you need to know my child&rsquo;s age?</b></p>
                    <p>What makes us different from all other book programs is our variety of books and book formats, and our ability to ship books that are specifically matched to your child&rsquo;s age. We&rsquo;ve spent more than 40 years researching how to do this and it is how we ensure that both you and your child will enjoy, be engaged by, and learn from every package we send.</p>
                    <p><b>Why do you need to know my child&rsquo;s name and gender?</b></p>
                    <p>Actually, we don&rsquo;t! We ask for your child&rsquo;s name and gender just so that we can personalize all of our communications to you. If you prefer not to provide this information, it will not impact the quality of your experience as an Early Moments customer.</p>
                </div>
            </div>
        </div>
    </div>

    <div id="dialog-message" title="Errors" class="modal fade" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <section class="modal-header">
                    <h3 id="myModalLabel1" style="color: Red">Error !</h3>
                </section>
                <section class="modal-body modal-body-alt">
                    <span id="spnErrorMessage"></span>
                </section>
                <section class="modal-footer">
                    <button type="button" data-dismiss="modal" aria-hidden="true" class="btn btn-primary">
                        Okay
                    </button>
                </section>
            </div>
        </div>
    </div>


</body>
</html>
