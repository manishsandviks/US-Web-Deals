        <div class="panel-body" id="viewOrderSummery">
            <h4 class="roundedBorderTop">Order Summary</h4>
            <div class="table-responsive smallTable roundedBorderBottom">
                @Html.Raw(ViewBag.CartSummary)
            </div>
        </div>


    </div>
    <div class="clearfix"></div><div>
        <h4 class="text-center hideSmall bold f20">You Saved $<span id="spnSavedPrice">51.94</span>!</h4>
    </div>
    <div class="col-md-12 text-center hideSmall">
        <p><img src="/images/elmo/payment399/guarantee1.jpg" class="responsiveImg"></p>
    </div>
}




