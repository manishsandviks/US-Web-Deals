                        </p>
                    </div>
                </div>
            </div>

            @*<div class="text-center marginTop15"><img src="/Images/seuss/Payment4for99Calendar1/button_2.png" alt="" class="responsiveImg buttonContinue cursor" id="btnSubmit"></div>*@
            <div class="text-center marginTop15"> <img src="/Images/elmo/Payment399/join-button.png" alt="" class="responsiveImg buttonContinue cursor" id="btnSubmit1" style="cursor:pointer"></div>

            <p class="marginTop10 noMarginBottomSmall text-center">
                <!--- GeoTrust -->
                <!-- GeoTrust True Site [tm] Smart Icon tag. Do not edit. -->
                <script language="JavaScript" type="text/javascript" src="//smarticon.geotrust.com/si.js"></script>
                <!-- end GeoTrust Smart Icon tag -->
                <!--<img src="/Images/elmo/Payment399/download.png" class="responsiveImg">-->
            </p>
        </div>

    </div>

}
<script>
    $(document).ready(function () {
        var err = '';
        if ('@ViewBag.ErrorMsg' != null) {
            err = '@Html.Raw(ViewBag.ErrorMsg)';
            // console.log(err);
            if (err.length > 0) {
                $("#spnErrorMessage").html(err.toString());
                $("#dialog-message").modal("toggle");
            }
        }
        if ('@ViewBag.IsBonusSelected' != null) {
            var isBonusSelected = '@ViewBag.IsBonusSelected';
            // alert(isBonusSelected);
            if (isBonusSelected == true || isBonusSelected == 'true' || isBonusSelected == 'True') {
                $("#spnSavedPrice").text('50.71');
            } else {
                $("#spnSavedPrice").text('40.76');
            }
        }

    })
</script>
<script>
    $("#txtKey").val('');
</script>

@section headerStrip {
    <header class="row">
        <div class="row adjustContainer">
            <div class="col-md-12 hideSmall">
                <img class="logo responsiveImg" src="/Images/elmo/399/header_logo.png" alt="Elmo's Learning Adventure">
                <img class="burst responsiveImg" src="/Images/elmo/399/header_burst.png">
            </div>
            <div class="col-md-12 hideBig">
                <a id="aboutlink" href="#"><img class="burst responsiveImg hand" src="/Images/elmo/399/mobileHeader_LP1.png"></a>
            </div>
        </div>
    </header>
}

@section LeftPanel {

    <p class="text-center"><img src="/images/elmo/payment399/leftTop.gif" alt="" class="responsiveImg"></p>
    <p class="text-center hideSmall"><img src="/images/elmo/payment399/left2.jpg" alt="" class="responsiveImg"></p>

    <div class="clearfix"></div>
    <div class="panel panel-default orderSummery roundedBorder">
        <div class="panel-heading hideBig hand" id="viewOrderSummeryBtn">
            <h5>Click here to Vieew</h5>
